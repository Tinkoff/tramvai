{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noEmitOnError": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "~shared/*": ["shared/*"],
      "~entities/*": ["entities/*"],
      "~features/*": ["features/*"],
      "~widgets/*": ["widgets/*"],
      "~pages/*": ["pages/*"],
      "~processes/*": ["processes/*"],
      "~app/*": ["app/*"]
    }
  }
}
